<% post.post_comments.each do |post_comment| %>
  <% post_comment_user = post_comment.user %>
  <tr>
  	<td>
  		<%= link_to user_path(post_comment_user), class: "user_#{post_comment_user.id}" do %>
    		<%= attachment_image_tag post_comment_user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class:"mt-3 rounded-circle"; %><br>
    		<%= post_comment_user.name %>
  		<% end %>
  	</td>
  	<td><%= post_comment.content %></td>

      <% if user_signed_in? && post_comment.user_id == current_user.id %>
  <td><%= link_to '削除', post_post_comment_path(post_comment.post_id, post_comment.id), method: :delete,
   class: "btn btn-danger comment-btn" ,data: { confirm: "削除してもいいですか？" }, remote: true %></td>
  <% end %>
  </tr>
  <% end %>
