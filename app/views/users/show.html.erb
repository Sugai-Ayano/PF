
  <div class='container show'>
    <div class='row'>
      <div class='col-md-3'>
      <% if current_user == @user %>
        <h2>マイページ<%= @user.is_deleted %></h2>
      <% else %>
        <h2>ユーザー情報</h2>
      <% end %>
        <table class='table'>
          <tr><%= attachment_image_tag @user, :profile_image, :fill, 200, 200, fallback: "no_image.jpg", size: "200x200", class:"mt-3 rounded-circle"; %>
          </tr>
          <tr>
            <th>名前：<%= @user.name %> </th>
          </tr>
          <tr>
            <th>フォロー：<%= link_to @user.followings.count, user_followings_path(@user) %>人</th>
          </tr>
          <tr>
            <th>フォロワー：<%= link_to @user.followers.count, user_followers_path(@user) %>人</th>
          </tr>
          <tr>
            <th>紹介文：<br>　<%= @user.introduction %></th>
          </tr>
        </table>
        <% if current_user == @user %>
            <%= link_to "マイページを編集する", edit_user_path(@user) %>
          </div>
          <%= render "/users/follow", user:@user %>

          <div class='col-md-8 offset-md-1'>
            <h1><%= @user.name %>さんの投稿</h1>
              <%= render "/users/user.posts/", user: @user%>
              <div class="pagenation">
                <%= paginate @posts %>
              </div>
          </div>
        <% else%>
            <%= render "/users/follow", user:@user %>
          </div>

          <div class='col-md-8 offset-md-1'>
            <h2><%= @user.name %>さんの投稿</h2>
              <%= render "/users/user.posts/", user: @user %>
            <div class="pagenation">
              <%= paginate @posts %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>









