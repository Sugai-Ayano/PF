
<!--<div class="col-sm-12 col-md-5 col-lg-4 px-5 px-sm-0 mx-auto">-->
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <% if current_user == @user %>
        <h1>マイページ</h1>
        <table class='table'>
          <tr><%= attachment_image_tag @user, :profile_image, :fill, 200, 200, fallback: "no_image.jpg", size: "200x200", class:"mt-3 rounded-circle"; %>
          </tr>
          <tr>
            <th>名前：<%= @current_user.name %> </th>
          </tr>
          <tr>
            <th>フォロー：<%= link_to @user.followings.count, user_followings_path(@user) %>人</th>
          </tr>
          <tr>
            <th>フォロワー：<%= link_to @user.followers.count, user_followers_path(@user) %>人</th>
          </tr>
          <tr>
            <th>紹介文：　<% @current_user.introduction %></th>
          </tr>
        </table>
        <%= link_to "マイページを編集する", edit_user_path(@user) %>
        <%= render "/users/follow", user:@user %>
        <div class='col-md-8 offset-md-1'>
          <h2><%= current_user.name %>さんの投稿</h2>
          <%= render "/users/user.posts/", user:@user%>
        </div>
      </div>
    </div>
  </div>

          <% else %>
    <div class='container px-5 px-sm-0'>
      <div class='row'>
        <div class='col-md-3'>
          <h4><%= @user.name %>さんのページ</h4>
          <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, fallback: "no_image.jpg", size: "200x200", class:"mt-3 rounded-circle"; %>
          <table class='table'>
            <tr>
              <th>名前：<%= @user.name %> </th>
            </tr>
            <tr>
              <th>フォロー：<%= link_to @user.followings.count, user_followings_path(@user) %>人</th>
            </tr>
            <tr>
              <th>フォロワー：<%= link_to @user.followers.count, user_followers_path(@user) %>人</th>
            </tr>
            <tr>
              <th>紹介文：　<% @user.introduction %></th>
            </tr>
          </table>
          <%= render "/users/follow", user:@user %>
          <div class='col-md-8 offset-md-1'>
            <h2><%= @user.name %>さんの投稿</h2>
            <%= render "/users/user.posts/", user:@user%>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  <%#= paginate @post_all %>



