    <div class='container'>
      <div class='row'>
       <div class="card-list-containar py-5">
          <% @posts.each do |post| %>
            <div class="card w-50 mx-auto mt-4 shadow-lg">
              <%= link_to post_path(post.id) do %>
                <%= attachment_image_tag post, :image, class:"card-img-top"; %>
              <% end %>
               <div class="card-body">
                  <div class="row">
                    <div class="col-10">
                      <p class="card-title">
                        <%= link_to(post_path(post.id), class:"text-dark") do %>
                          タイトル：<%= post.title %>
                        <% end %>
                      </p>
                      <p class="post-text">説明：<%= post.caption %></p>
                      <span>
                        </i>
                        <%= link_to "コメント#{post.post_comments.count} 件", post_path(post.id), class:"text-dark" %>
                    </div>
                  </div>
                </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>