 <div class="card-list-containar py-5">
    <% @posts.each do |post| %>
      <div class="card-list-containar py-5">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, class:"card-img-top"; %>
        <% end %>
         <div class="card-body">
            <div class="row">
              <div class="col-10">
                <p class="card-title">
                  <%= link_to(post_path(post.id), class:"text-dark") do %>
                    <%= post.title %>
                  <% end %>
                </p>
                <p class="post-text"><%= post.caption %></p>
                <span>
                  </i>
                  投稿者<%= post.user.name %> ｜
                </span>
                <span>
                  <%= attachment_image_tag @post.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class:"mt-3 rounded-circle"; %>
                  <%= link_to "コメント#{post.post_comments.count} 件", post_path(post.id), class:"text-dark" %>
              </div>
            </div>
          </div>
      </div>
    <% end %>
  </div>