  <div class ="container">
    <div class="row">
      <div class="col-12 title">
        <h5>いいね数ランキング</h5>
      </div>
    </div>
    <div class="row">
      <% all_ranks.each.with_index(1) do |post, i | %>
        <div class="col-4 ranking-container">
          <div>
            第<%= i %>位
          </div>
          <%= link_to post_path(post) do %>
            <%= attachment_image_tag post, :image, :fill, 200, 150, size: "200x150" %>
          <% end %>
          <div class="top-item mt-1">
            <%= post.title.truncate(10) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>