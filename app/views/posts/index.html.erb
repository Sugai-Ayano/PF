  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <div class="row">
          <div class="sidebar">
            <%#= render "posts/ranking", all_ranks:@all_ranks %>
          </div>
        </div>
        <% if @posts == nil %>
          <h1>みんなの投稿</h1>
          <%= render 'layouts/search' %><br>
          <p>見たい投稿の季節を選んでください</p>
          <%= link_to "春", posts_path(:season => "春") %>
          <%= link_to "夏", posts_path(:season => "夏") %>
          <%= link_to "秋", posts_path(:season => "秋") %>
          <%= link_to "冬", posts_path(:season => "冬") %>
          <%= link_to "その他", posts_path(:season => "その他") %>

            <div class="col-xs-12 col-md-6 col-lg-4">
              <table class="post-block">
                <tbody>
                  <tr>
                    <div class="post-containar py-5">
                      <% @post_all.each do |post| %>
                        <div class="post w-50 mx-auto mt-4 shadow-lg">
                          <%= link_to post_path(post.id) do %>
                            <%= attachment_image_tag post, :image, class: "card-img-top" %>
                          <% end %>
                        </div>
                        <div class="post-body">
                          <div class="row">
                            <div class="col-2">
                              <%= attachment_image_tag post.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
                            </div>
                            <div class="col-10">
                              <p class="post-time">
                              <p><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
                              </p>
                              <p class="post-title">
                                <%= link_to(post_path(post.id), class:"text-dark") do %>
                                  <%= post.title %>
                                <% end %>
                              </p>
                              <p class="post-text"><%= post.genre_id %></p>
                              <p class="post-text"><%= post.caption %></p>
                              <span>
                                <i class="fas fa-user"></i> 投稿者<%= post.user.name %> ｜
                              </span>
                              <span><%= link_to "コメント#{post.post_comments.count} 件", post_path(post.id), class:"text-dark" %>
                              </span>
                            </div>
                          </div>
                        </div>
                      <% end %>
                      <%= paginate @post_all %>
                    </div>
                  </tr>
                </tbody>
              </table>
            </div>
        <% else %>
          <h1><%= @genre_name %>の投稿</h1>
          <%= link_to "春", posts_path(:season => "春") %>
          <%= link_to "夏", posts_path(:season => "夏") %>
          <%= link_to "秋", posts_path(:season => "秋") %>
          <%= link_to "冬", posts_path(:season => "冬") %>
          <%= link_to "その他", posts_path(:season => "その他") %>

          <div class="post-containar py-5">
            <% @posts.each do |post| %>
              <div class="post w-50 mx-auto mt-4 shadow-lg">
                <%= link_to post_path(post.id) do %>
                  <%= attachment_image_tag post, :image, class:"card-img-top"; %>
                <% end %>
                <div class="post-body">
                  <div class="row">
                    <div class="col-2">
                      <%= attachment_image_tag post.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
                    </div>
                    <div class="col-10">
                      <p class="post-time">
                        <%= post.created_at.strftime("%Y-%m-%d") %>
                      </p>
                      <p class="post-title">
                        <%= link_to(post_path(post.id), class:"text-dark") do %>
                           <%= post.title %>
                        <% end %>
                      </p>
                      <p class="post-text"><%= post.caption %></p>
                      <span><i class="fas fa-user"></i> 投稿者<%= post.user.name %> ｜ </span>
                      <span class="post_comments-count">コメント数: <%#= post.post_comments.count %>件</span>
                      <span><%#= link_to "#{post.post_comments.count} コメント", post_path(post.id), class:"text-dark" %></span>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <%= paginate @posts %>
        <% end %>
      </div>
    </div>
  </div>