  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <div class="row">
          <div class="sidebar">
            <%= render "posts/ranking" %>
          </div>
        </div>
      <h1>みんなの投稿</h1>
        <div class="col-xs-12 col-md-6 col-lg-4">
          <table class="post-block">
            <tbody><tr>
              <div class="post-containar py-5">
                <% @post_all.each do |post| %>
              <div class="post w-50 mx-auto mt-4 shadow-lg">
                <%= link_to post_path(post.id) do %>
                <%= attachment_image_tag post_image, :image, class:"card-img-top"; %>
                <% end %>
              <div class="post-body">
                <div class="row">
                  <div class="col-2">
                    <%= attachment_image_tag image.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
                  </div>
                  <div class="col-10">
                    <p class="post-time">
                      <%= post.created_at %>
                    </p>
                    <p class="post-title">
                      <%= link_to(post_path(post.id), class:"text-dark") do %>
                         <%= post_title %>
                      <% end %>
                    </p>
                    <p class="post-text"><%= genre.name %></p>
                    <p class="post-text"><%= post.caption %></p>
                    <span><i class="fas fa-user"></i> 投稿者<%= post.user.name %> ｜ </span>
                    <span><%= link_to "#{post_comments.count} コメント", post_path(post.id), class:"text-dark" %></span>
                  </div>
                </div>
              </div>
              </tr>
            </table>
              </div>
              <% end %>
               <%= paginate post_images %>
              </div>
          </div>
      </div>
    </div>
  </div>