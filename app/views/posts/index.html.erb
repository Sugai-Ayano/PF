  <div class='container'>
    <div class='row'>
      <% if @posts == nil %>
      <!--<div class='col-md-2'>-->
      <%= render "posts/ranking", all_ranks:@all_ranks %>
    </div>
    <!--<div>-->
    <!--<div class="card-list-containar">-->
      <h2 class ="posts-index">みんなの投稿</h2>
      <div class="row">
        <%= render 'searches/searches' %>
      </div>
      <div class="row">
        <%= render 'posts/season' %>
      </div>
      <div class="row">
        <!--<div class="col-4">-->
          <!--<div class="card-list-containar py-5">-->
            <% @post_all.each do |post| %>
            <div class="card mx-auto mt-4 shadow-lg">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, class: "card-img-top" %>
            <% end %>
            <div class="card-body">
              <div class="row">
                <div class="col-10">
                  <p class="card-title">
                    <%= link_to(post_path(post.id), class:"text-dark") do %>
                      タイトル：<%= post.title %>
                    <% end %>
                  </p>
                  <p class="post-text">ジャンル：<%= post.genre_id %></p>
                  <p class="card-text">説明文：<%= post.caption %></p>
                  <%# truncate(@post.description, length: 10) do %>
                    <p><%#= link_to '続き', ... %></p>
                  <%# end %>
                  <span>
                    <%= attachment_image_tag @post.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class:"mt-3 rounded-circle"; %>
                    </i> 投稿者：  <%= post.user.name %> ｜
                  </span>
                  <span><%= link_to "コメント#{post.post_comments.count} 件", post_path(post.id), class:"text-dark" %></span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
        <%= paginate @post_all %>
      </div>
        <% else %>
        <div class='col-md-10'>
          <h1 class="season-title"><%= @genre_name %>の投稿</h1>
          <%= render 'posts/season' %>
            <div class="card-list-containar py-5">
              <% @posts.each do |post| %>
                <div class="card w-50 mx-auto mt-4 shadow-lg">
                  <%= link_to post_path(post.id) do %>
                    <%= attachment_image_tag post, :image, class:"card-img-top"; %>
                  <% end %>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-10">
                        <p class="card-title">
                          <%= link_to(post_path(post.id), class:"text-dark") do %>
                             タイトル：<%= post.title %>
                          <% end %>
                        </p>
                        <p class="post-text">ジャンル：<%= post.genre_id %></p>
                        <p class="card-text">説明文：<%= post.caption %></p>
                        <span>
                          <%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class:"mt-3 rounded-circle"; %>
                        </i> 投稿者<%= post.user.name %> ｜</span>
                        <span><%= link_to "コメント#{post.post_comments.count} 件", post_path(post.id), class:"text-dark" %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
        </div>
        <%#= paginate @posts %>
        <% end %>
  </div>
