  <div class='container'>
    <div class='row'>
      <div class="ranking">
        <%= render "posts/ranking", all_ranks: @all_ranks %>
      </div>
    </div>
    <% if @posts == nil %>
      <h2 class ="posts-index">みんなの投稿</h2>
      <div class="row">
        <div class="search"><%= render 'searches/searches' %></div>
      </div>
      <div class="row">
        <div class="season">
          <%= render 'posts/season' %>
        </div>
      </div>
      <div class="row">
        <% @post_all.each do |post| %>
        <div class="card mx-auto mt-4 shadow-lg">
          <div class="img_wrap">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image,class: "card-img-top" %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-10">
                <p class="card-title">
                  <%= link_to(post_path(post.id), class:"text-dark") do %>
                    タイトル：<%= post.title %>
                  <% end %>
                </p>
                <p class="post-text">ジャンル：<%= post.genre_id %></p>
                <p class="card-text">説明文：<%= post.caption %></p>
                <%# truncate(@post.description, length: 10) do %>
                <p><%#= link_to '続き', ... %></p>
                <%# end %>
                <span>
                  <%= attachment_image_tag @post.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class:"mt-3 rounded-circle"; %>
                    投稿者：  <%= post.user.name %>
                </span>
                <span><%= link_to "コメント#{post.post_comments.count} 件", post_path(post.id), class:"text-dark" %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
      <%= paginate @post_all %>
    <% else %>
      <div id='season'>
        <h2 class="posts-index"><%= @genre_name %>の投稿</h2>
        <div class="row">
          <div class="season">
            <%= render 'posts/season' %>
          </div>
        </div>
        <div class="row">
        <% @posts.each do |season_post| %>
          <div class="card mx-auto mt-4 shadow-lg">
            <div class="img_wrap">
              <%= link_to post_path(season_post.id) do %>
                <%= attachment_image_tag season_post, :image, class:"card-img-top"; %>
              <% end %>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-10">
                  <p class="card-title">
                    <%= link_to(post_path(season_post.id), class:"text-dark") do %>
                      タイトル：<%= season_post.title %>
                    <% end %>
                  </p>
                  <p class="post-text">ジャンル：<%= season_post.genre_id %></p>
                  <p class="card-text">説明文：<%= season_post.caption %></p>
                  <span>
                    <%= attachment_image_tag season_post.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class:"mt-3 rounded-circle"; %>
                    </i> 投稿者<%= season_post.user.name %>
                  </span>
                  <span><%= link_to "コメント#{season_post.post_comments.count} 件", post_path(season_post.id), class:"text-dark" %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <%#= paginate @posts %>
    <% end %>
  </div>
